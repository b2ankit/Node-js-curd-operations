<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!--Link font awesome CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!--Link Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container-fluid">
    <!-- <h1 style="margin: 50px auto; text-align: center; font-size: 24px;"><%= title %></h1> -->
    <div class="container" style="margin-bottom: 50px;" >
      <div class="row">
        <div class="col-md-3">
            <h1 style=" text-align: left; margin: 0;padding: 0; padding: 15px 0; font-size: 28px;text-decoration: underline orange; font-weight: 550;"><%= title %></h1>
        </div>
        <div class="col-md-3 col-md-offset-6">
            <form action="/search/" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
              <div class="row">
                <div class="col-sm-8" style="margin: 15px 0;padding: 2px;">
                    <input type="text" id="searchName" class="form-control" name="uname" placeholder="Enter Name">
                </div>
                <div class="col-sm-4" style="margin: 15px 0;padding: 2px;">
                    <input type="submit" class="form-control btn btn-primary" name="submit" value="Search" placeholder="Filter">
                </div>
              </div>
            </form>
        </div>

      </div>
    </div>
   
    <div class="container">
      <table class="table table-striped table-bordered table-hover" style="text-align: center;">
        <thead">
          <tr  style="background-color: black; color: white;">
            <th style="text-align: center;">Name</th>
            <th style="text-align: center;">Email</th>
            <th style="text-align: center;">Class</th>
            <th style="text-align: center;">Gender</th>
            <th style="text-align: center;">Contact</th>
            <th style="text-align: center;">Action</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(function(row) {%>
          <tr>
            <td><%= row.name %></td>
            <td><%= row.email %></td>
            <td><%= row.class %></td>
            <td><%= row.gender%></td>
            <td><%= row.contact%></td>
            <td><a class="btn btn-primary btn-xs" href="/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
              <a class="btn btn-danger btn-xs" href="/delete/<%= row._id %>"><i class="fa fa-trash"></i></a></td>

          </tr>
          <% }) %>

        </tbody>
      </table>
    </div>

    <div class="container" style="margin-top: 50px;">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
              <% if(msg !=''){%>
                <div class="alert alert-success">
                    <strong>Success!</strong><%= msg%>.
                  </div>
                  <%}%>
          </div>
        </div>
      </div>

    <div class="container">
      <div class="row">
          <div id="signupbox" style="margin-top:0px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title">Student Details Form</div>
                       </div>  
                  <div class="panel-body" >
                      <form action="/" id="StudentForm" class="form-horizontal" method="post">
                          
                          <div id="signupalert" style="display:none" class="alert alert-danger">
                              <p>Error:</p>
                              <span></span>
                          </div>
                              
                          <div class="form-group">
                              <label for="firstname" class="col-md-3 control-label">Name</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="uname" placeholder="Enter Your Name">
                              </div>
                          </div>
                            
                          <div class="form-group">
                              <label for="email" class="col-md-3 control-label">Email</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="email" placeholder="Email Address">
                              </div>
                          </div>
                              
                          
                          <div class="form-group">
                              <label for="lastname" class="col-md-3 control-label">Class</label>
                              <div class="col-md-9">
                          <select class="form-control" name="class">
                          <option value="">Select Class</option>
                          <option value="9th">9th</option>
                          <option value="10th">10th</option>
                          <option value="11th">11th</option>
                          <option value="12th">12th</option>
                          </select>
                              </div>
                          </div>

                          <div class="form-group">
                            <label for="lastname" class="col-md-3 control-label">Gender</label>
                            <div class="col-md-9">
                        <select class="form-control" name="gender">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        </select>
                            </div>
                        </div>
                          
                              
                          <div class="form-group">
                              <label for="icode" class="col-md-3 control-label"> Contact</label>
                              <div class="col-md-9">
                                  <input type="number" class="form-control" name="contact" placeholder="Enter Contact Number">
                              </div>
                          </div>

                          <div class="form-group">
                            <!-- Button -->                                        
                            <div class="col-md-offset-3 col-md-9">
                            <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                            </div>
                        </div>  
                             
                      </form>
                   </div>
              </div>


    </div>
     </div>
  </div>

   

 </div> 
  </body>
</html>
